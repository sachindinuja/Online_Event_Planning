<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
    <servlet>
    	<servlet-name>login</servlet-name>
    	<servlet-class>com.customer.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    		<servlet-name>login</servlet-name>
    		<url-pattern>/log</url-pattern>
    </servlet-mapping>    
	
	<servlet>
		<servlet-name>customerInsert</servlet-name>
		<servlet-class>com.customer.CustomerInsert</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>customerInsert</servlet-name>
		<url-pattern>/insert</url-pattern>
	</servlet-mapping>
	

	
	<servlet>
		<servlet-name>contactUs</servlet-name>
		<servlet-class>com.contactus.ContactInsert</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>contactUs</servlet-name>
		<url-pattern>/input</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>payment</servlet-name>
		<servlet-class>com.payment.PaymentInsert</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>payment</servlet-name>
		<url-pattern>/data</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>updateCustomer</servlet-name>
		<servlet-class>com.customer.UpdateCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateCustomer</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>updateContact</servlet-name>
		<servlet-class>com.contactus.UpdateContactServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateContact</servlet-name>
		<url-pattern>/updateC</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>contactDetails</servlet-name>
		<servlet-class>com.contactus.ContactServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>contactDetails</servlet-name>
		<url-pattern>/contact</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>updatePayment</servlet-name>
		<servlet-class>com.payment.UpdatePaymentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updatePayment</servlet-name>
		<url-pattern>/updateP</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>paymentDetails</servlet-name>
		<servlet-class>com.payment.PaymentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>paymentDetails</servlet-name>
		<url-pattern>/payment</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deleteCustomer</servlet-name>
		<servlet-class>com.customer.DeleteCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteCustomer</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deleteContact</servlet-name>
		<servlet-class>com.contactus.DeleteContactServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteContact</servlet-name>
		<url-pattern>/deleteCon</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deletePayment</servlet-name>
		<servlet-class>com.payment.DeletePaymentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deletePayment</servlet-name>
		<url-pattern>/deletePay</url-pattern>
	</servlet-mapping>

</web-app>



